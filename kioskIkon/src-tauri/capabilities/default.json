{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:app:allow-default-window-icon",
    "core:default",
    "opener:default",
    "shell:default",
    "core:window:allow-set-always-on-bottom",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-cscript",
          "cmd": "cscript",
          "args": [
            "C:\\ikon\\ikon_pos.vbs"
          ]
        },
        {
          "name": "start-explorer",
          "cmd": "explorer.exe"
        },
        {
          "name": "logout",
          "cmd": "shutdown",
          "args": [
            "/l"
          ]
        },
        {
          "name": "nircmd",
          "sidecar": true,
          "args": [
            "win",
            "normal",
            "process",
            "MSACCESS.EXE"
          ]
        }
      ]
    }
  ]
}